@model SalesWebMvc.Models.ViewsModels.SellerFormViewModel;
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />

<div class="row">
<div class="col-md-4">
    <form asp-action="Create">

        <div class="form-group">

            <label asp-for="Seller.Name" class="control-label"></label><br />
            <input asp-for="Seller.Name" class="control-control" />

        </div>
        <div class="form-group">

            <label asp-for="Seller.Email" class="control-label"></label><br />
            <input asp-for="Seller.Email" class="control-control" />

        </div>
        <div class="form-group">

            <label asp-for="Seller.BirthData" class="control-label"></label><br />
            <input asp-for="Seller.BirthData" class="control-control" />

        </div>
        <div class="form-group">

            <label asp-for="Seller.BaseSalary" class="control-label"></label><br />
            <input asp-for="Seller.BaseSalary" class="control-control" />

        </div>

        <div class="form-group">     
        <label asp-for="Seller.DepartmentId" class="control-label"></label>     
        <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id", "Name"))" class="form-control"></select> 
        </div>

        <div class="form-group">

            <input type="submit" value="Create" class="btn btn-default" />

        </div>

    </form>

</div>
</div>

